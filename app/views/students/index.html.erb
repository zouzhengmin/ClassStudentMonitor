<h1>学生页</h1>

<table>
  <tr>
    <td>序号</td>
    <td>所在班级</td>
    <td>学生号</td>
    <td>学生名字</td>
  </tr>
  <% @students.each_with_index do |student,index| %>
  <tr>
    <td><%= index + 1 %></td>
    <td><%= link_to "#{student.myclass.name}", student.myclass %></td>
    <td><%= student.number %></td>
    <td><%= student.name %></td>
    <td><%= link_to "修改", edit_student_path(student) %></td>
    <td><%= link_to "删除", student, method: :delete %></td>
  </tr>
  <% end %>
  <tr>
    <td><%= link_to '添加学生', new_student_path %></td>
  </tr>
</table>
